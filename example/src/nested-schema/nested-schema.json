{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "required": ["title"],
    "properties": {
        "title": {
            "type": "string",
            "title": "Cart Title"
        },
        "field": {
            "title": "Object Type",
            "type": "object",
            "properties": {
                "field1": {
                    "type": "string",
                    "title": "Field 1"
                },
                "field2": {
                    "type": "string",
                    "title": "Field 2"
                }
            }
        },
        "fields": {
            "type": "array",
            "maxItems": 5,
            "title": "Array Type",
            "items": {
                "$ref": "#/definitions/Field"
            }
        }
    },
    "definitions": {
        "Field": {
            "title": "Field",
            "type": "object",
            "required": ["name", "count"],
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Name"
                },
                "count": {
                    "type": "integer",
                    "title": "Items",
                    "minimum": 1,
                    "maximum": 10
                }
            }
        }
    }
}
