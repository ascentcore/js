{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/root.json",
    "type": "object",
    "required": [
        "title"
    ],
    "properties": {
        "title": {
            "type": "string",
            "title": "Cart Title"
        },
        "description": {
            "type": "string",
            "title": "Cart Description"
        },
        "field": {
            "type": "object",
            "$ref": "#/definitions/Field"
        },
        "fields": {
            "type": "array",
            "maxItems": 1,
            "title": "Items",
            "items": {
                "$ref": "#/definitions/Field"
            }
        }
    },
    "definitions": {
        "Field": {
            "type": "object",            
            "required": [
                "name",
                "price"
            ],
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Name"
                }, 
                "count": {
                    "type": "integer",
                    "title": "Count",
                    "minimum": 1
                },                
                "price": {
                    "type": "number",
                    "title": "Price",
                    "minimum": 0,
                    "maximum": 30
                }
            }
        }
    }
}