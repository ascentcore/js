{
    "definitions": {
        "owner": {
            "type": "object",
            "tile": "owner",
            "properties": {
                "name": {
                    "title": "Name",
                    "type": "string"
                },
                "gender": {
                    "titile": "Gender",
                    "type": "string",
                    "enum": ["m", "f"]
                }
            },
            "required": ["name"]
        },
        "car": {
            "type": "object",
            "title": "Car",
            "properties": {
                "year": {
                    "title": "Purchasing Year",
                    "type": "integer",
                    "default": 2020
                },
                "second": {
                    "type": "boolean",
                    "title": "Had previous owner"
                }
            },
            "allOf": [
                {
                    "if": {
                        "properties": {
                            "second": {
                                "const": true
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "previous": {
                                "title": "Previous owner",
                                "$ref": "#/definitions/owner"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "year": {
                                "const": 2000
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "previous": {
                                "title": "Previous owner",
                                "$ref": "#/definitions/owner"
                            }
                        }
                    }
                },
                {
                    "if": {
                        "properties": {
                            "previous": {
                                "properties": {
                                    "gender": {
                                        "const": "f"
                                    }
                                }
                            }
                        }
                    },
                    "then": {
                        "properties": {
                            "previous": {
                                "required": ["kids"],
                                "properties": {
                                    "kids": {
                                        "type": "integer",
                                        "title": "Kids"
                                    }
                                }
                            }
                        }
                    }
                }
            ]
        }
    },
    "type": "object",
    "properties": {
        "owner": {
            "$ref": "#/definitions/owner"
        },
        "car": {
            "$ref": "#/definitions/car"
        }
    }
}
