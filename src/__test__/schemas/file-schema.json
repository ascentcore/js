{
    "$id": "https://example.com/person.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "title": "File",
    "description": "Upload a file",
    "properties": {
        "profilePicture": {
            "title": "Upload photo",
            "type": "object",
            "instanceof": "file",
            "properties": {
                "filename": {
                    "type": "string"
                },
                "content": {
                    "type": "string",
                    "contentEncoding": "base64"
                }
            }
        }
    }
}
